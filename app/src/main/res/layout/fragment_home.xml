<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="?attr/screen_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/screen_background"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="12dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        android:id="@+id/instagram"
                        app:rippleColor="?attr/ui_background"
                        app:cardBackgroundColor="?attr/screen_background"
                        app:strokeColor="?attr/outline"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginVertical="6dp"
                                android:layout_marginRight="4dp"
                                app:tint="?attr/main_text"
                                android:layout_height="22dp"
                                android:src="@drawable/instagram"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Our Instagram"
                                android:textSize="14sp"
                                android:paddingBottom="2dp"
                                android:textColor="?attr/main_text"
                                android:layout_marginRight="8dp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:rippleColor="?attr/ui_background"
                        app:cardElevation="0dp"
                        android:id="@+id/twitter"
                        android:layout_marginLeft="8dp"
                        app:cardBackgroundColor="?attr/screen_background"
                        app:strokeColor="?attr/outline"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginVertical="6dp"
                                android:layout_marginRight="4dp"
                                android:layout_height="22dp"
                                app:tint="?attr/main_text"
                                android:src="@drawable/twitter"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tweet us"
                                android:textSize="14sp"
                                android:paddingBottom="2dp"
                                android:textColor="?attr/main_text"
                                android:layout_marginRight="8dp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        android:id="@+id/gmail"
                        app:rippleColor="?attr/ui_background"
                        android:layout_marginLeft="8dp"
                        app:cardBackgroundColor="?attr/screen_background"
                        app:strokeColor="?attr/outline"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginVertical="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_height="20dp"
                                app:tint="?attr/main_text"
                                android:src="@drawable/baseline_gmail"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email us"
                                android:textSize="14sp"
                                android:paddingBottom="2dp"
                                android:textColor="?attr/main_text"
                                android:layout_marginRight="8dp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        android:id="@+id/telegram"
                        app:rippleColor="?attr/ui_background"
                        android:layout_marginLeft="8dp"
                        app:cardBackgroundColor="?attr/screen_background"
                        app:strokeColor="?attr/outline"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginVertical="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_height="20dp"
                                app:tint="?attr/main_text"
                                android:src="@drawable/telegram"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Telegram us"
                                android:textSize="14sp"
                                android:paddingBottom="2dp"
                                android:textColor="?attr/main_text"
                                android:layout_marginRight="8dp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </HorizontalScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="8dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="28dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:background="@drawable/ripple_button"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/log_out_btn"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:paddingLeft="26dp"
                        android:src="@drawable/ic_baseline_exit_to_app_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/screen_background" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_profile_picture"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/profile_picture"
                        app:layout_constraintTop_toTopOf="parent"
                        custom:layout_constraintEnd_toStartOf="@+id/log_out_btn">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="2dp"
                            android:text="View Profile"
                            android:textColor="?attr/screen_background"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="View and manage your profile."
                            android:textColor="?attr/ui_background"
                            android:textSize="14sp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/card_aryan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/ui_background"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    android:layout_marginHorizontal="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_width="24dp"
                                android:layout_marginRight="8dp"
                                app:tint="?attr/ui_background"
                                android:padding="4dp"
                                android:background="@drawable/circle_bg"
                                android:src="@drawable/icon_emoji"
                                android:layout_height="24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Content Creators"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="?attr/main_text"
                                android:textSize="18sp" />

                        </LinearLayout>


                        <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/aryan_ll"
                        android:background="@drawable/ripple_ui"
                        android:layout_height="match_parent"
                        android:paddingVertical="8dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/aryan_omoji"
                            android:layout_width="85dp"
                            android:layout_marginLeft="4dp"
                            android:layout_height="85dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/aryan_omoji_pic"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="16dp"
                                android:src="@drawable/ic_circle_arrow"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="?attr/button_background" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aryan Srivastava"
                                android:layout_marginLeft="4dp"
                                android:textColor="?attr/main_text"
                                android:textSize="18sp"
                                custom:layout_constraintLeft_toLeftOf="parent"
                                custom:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:layout_marginTop="2dp"
                                android:ellipsize="end"
                                android:layout_marginRight="8dp"
                                android:layout_marginLeft="4dp"
                                android:text="Hello, I am Aryan Srivastava, and I create content for the YouTube channel Fizanto Fuzz. I'd like to share a story from my perspective. In March 2020, when the COVID-19 pandemic led to a nationwide lockdown, we suddenly had a lot of free time."
                                android:textColor="?attr/secondary_text"
                                android:textSize="14sp"
                                custom:layout_constraintRight_toLeftOf="@id/imageView3"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                custom:layout_constraintLeft_toLeftOf="parent"
                                custom:layout_constraintTop_toBottomOf="@+id/textView2" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/prateek_ll"
                        android:layout_height="match_parent"
                        android:background="@drawable/ripple_ui"
                        android:layout_marginBottom="8dp"
                        android:paddingVertical="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/prateek_omoji"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/prateek_omoji_pic"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="16dp"
                                android:src="@drawable/ic_circle_arrow"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="?attr/button_background" />

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Prateek Sinha"
                                android:layout_marginLeft="4dp"
                                android:textColor="?attr/main_text"
                                android:textSize="18sp"
                                custom:layout_constraintLeft_toLeftOf="parent"
                                custom:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView40"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:layout_marginTop="2dp"
                                android:ellipsize="end"
                                android:layout_marginRight="8dp"
                                android:layout_marginLeft="4dp"
                                android:text="Hello, I am Prateek Sinha. My passion for creating videos on YouTube led to the establishment of the Fizanto Fuzz channel. Partnering with my friend Aryan, we began producing videos focused on game recordings and topical roasts."
                                android:textColor="?attr/secondary_text"
                                android:textSize="14sp"
                                custom:layout_constraintRight_toLeftOf="@id/imageView5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                custom:layout_constraintLeft_toLeftOf="parent"
                                custom:layout_constraintTop_toBottomOf="@+id/textView20" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"
                app:cardBackgroundColor="?attr/ui_background"
                app:cardCornerRadius="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="24dp"
                            android:layout_marginRight="8dp"
                            app:tint="?attr/ui_background"
                            android:padding="4dp"
                            android:background="@drawable/circle_bg"
                            android:src="@drawable/ic_baseline_code_24"
                            android:layout_height="24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Source Code"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="?attr/main_text"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="4dp"
                        android:textColor="?attr/secondary_text"
                        android:text="We are pleased to announce that the Fizanto Fuzz App is now publicly available! You can now view and contribute to our app's source code. Embracing an Open Source Infrastructure, we invite developers to collaborate with us in enhancing and expanding the app's features. To visit our GitHub page, please click the button below."
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/github_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="?attr/button_background"
                        app:rippleColor="?attr/bar_ui"
                        android:text="Source code on Github"
                        android:textColor="?attr/screen_background"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="8dp"
                app:cardBackgroundColor="?attr/ui_background"
                app:cardCornerRadius="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="24dp"
                            android:layout_marginRight="8dp"
                            app:tint="?attr/ui_background"
                            android:padding="4dp"
                            android:background="@drawable/circle_bg"
                            android:src="@drawable/icon_share"
                            android:layout_height="24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Share App"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="?attr/main_text"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="4dp"
                        android:textColor="?attr/secondary_text"
                        android:text="Due to budget constraints, we rely on our dedicated community to help promote the app and extend its reach. We kindly request you to take a moment to share our app with anyone who might find it useful and entertaining. Your support is invaluable in helping us grow."
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/share_our_app_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="?attr/button_background"
                        app:rippleColor="?attr/bar_ui"
                        android:text="Share our app"
                        android:textColor="?attr/screen_background"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>