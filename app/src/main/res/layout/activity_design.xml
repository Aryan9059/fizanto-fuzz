                                android:layout_height="18dp"
                                android:layout_gravity="bottom"
                                android:background="?attr/screen_background">

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:background="@color/green2"/>

                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:background="@color/green3"/>

