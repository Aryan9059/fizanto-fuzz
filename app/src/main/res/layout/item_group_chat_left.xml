<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:id="@+id/img_receiver"
        android:src="@drawable/default_profile_picture"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:padding="8dp"
        android:background="@drawable/background_left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/receiverchatname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            android:textColor="?attr/bar_ui"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/verify_img"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_verification_24"
            app:tint="?attr/button_background"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

        <TextView
            android:id="@+id/receivermessagechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorLink="?attr/button_background"
            android:autoLink="all"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:textColor="?attr/main_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="?attr/secondary_text"
            android:textSize="12sp"
            android:layout_gravity="end"
            />

    </LinearLayout>
</LinearLayout>