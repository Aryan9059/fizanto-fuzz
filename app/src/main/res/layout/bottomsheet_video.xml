<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/screen_background">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:text="Description"
        android:layout_marginTop="16dp"
        android:textColor="?attr/main_text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:textColor="?attr/main_text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/bottom_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="?attr/main_text"
        android:textSize="21sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bottom_views"
        app:layout_constraintTop_toBottomOf="@+id/bottom_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="?attr/secondary_text"
        android:text="Likes"
        app:layout_constraintStart_toStartOf="@id/bottom_likes"
        app:layout_constraintEnd_toEndOf="@id/bottom_likes"
        app:layout_constraintTop_toBottomOf="@id/bottom_likes"/>

    <TextView
        android:id="@+id/bottom_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="?attr/main_text"
        android:textSize="21sp"
        app:layout_constraintEnd_toStartOf="@id/bottom_date"
        app:layout_constraintStart_toEndOf="@+id/bottom_likes"
        app:layout_constraintTop_toBottomOf="@+id/bottom_title" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Views"
        android:textColor="?attr/secondary_text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/bottom_views"
        app:layout_constraintStart_toStartOf="@id/bottom_views"
        app:layout_constraintTop_toBottomOf="@id/bottom_views" />

    <TextView
        android:id="@+id/bottom_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="?attr/main_text"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottom_views"
        app:layout_constraintTop_toBottomOf="@+id/bottom_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/bottom_day"
        android:textColor="?attr/secondary_text"
        android:text="Dec 9"
        app:layout_constraintStart_toStartOf="@id/bottom_date"
        app:layout_constraintEnd_toEndOf="@id/bottom_date"
        app:layout_constraintTop_toBottomOf="@id/bottom_date"/>

    <TextView
        android:id="@+id/bottom_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginTop="20dp"
        android:textColor="?attr/secondary_text"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/bottom_link"
        app:rippleColor="?attr/bar_background"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?attr/button_background"
        android:textColor="?attr/screen_background"
        android:text="Watch on YouTube"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_des" />


</androidx.constraintlayout.widget.ConstraintLayout>